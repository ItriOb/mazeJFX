<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>
<ScrollPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml" fx:id="scrollPane" fx:controller="com.example.demo.MainController" onKeyPressed="#handleKeyPress">
    <VBox alignment="CENTER" spacing="20">
        <Label fx:id="titleLabel" text="My Game Title" styleClass="game-title" />
        <Label text="Enter Maze Size:" />
        <TextField fx:id="sizeInput" />
        <Button text="Generate Labyrinthe" onAction="#handleGenerateButtonClick" />
        <Button text="Show Shortest Path"  />
        <Button text="Play Mini-Game"/>
        <VBox fx:id="container" spacing="10">
            <Canvas fx:id="mazeCanvas" width="400" height="400"/>
        </VBox>


    </VBox>
</ScrollPane>